   name {{ vlan['name'] }}
{% if 'MLAG' in vlan['name'] or (vlan['vlan_group'] is defined and vlan['vlan_group'] and vlan['vlan_group']['name'] == 'MLAG_GROUP') %}
   trunk group MLAG
{% endif %}
{% endfor %}
{% endif %}